<% include ../partials/header %>
<div class="row">
    <div class="col-xs-3 filler"></div>
    <div class="col-xs-6">
      <form action="/animals/<%=animal.id%>?_method=put" class="text-center" method="POST">
        <h1>Edit ANIMAL!</h1>
          <input type="text" class="form-control" value="<%=animal.name%>" aria-describedby="basic-addon1"name="name" id="name" required>
          <input type="text" class="form-control" value="<%=animal.species%>" aria-describedby="basic-addon1"name="species" id="species" required>
          <input type="text" class="form-control" value="<%=animal.age%>" aria-describedby="basic-addon1"name="age" id="age" required>
          <input type="text" class="form-control" value="<%=animal.photo%>" aria-describedby="basic-addon1"name="photo" id="photo">
        <br>
        <button class="btn-lg btn-success">ADD</button>
      </form>
    <div class="col-xs-3 filler"></div>
<% include ../partials/footer %>